package exercise1;

public class RectangleComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double length , width, area , perimeter ;
		length = 3.0;
		width = 4.0;
		
		area = length * width;
		perimeter = ( length + length + width + width );
		
		System.out.printf("The Area is : %.2f cm " , area );
		System.out.printf("\nThe perimeter is : %.2f cm", perimeter);
		
	}

}


package exercise1;

public class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double radius, height, surfaceArea, baseArea, volume ;
		final double pi = 3.14159265;
		
		radius = 4.0 ;
		height = 12.0;
		
		surfaceArea = (2 * pi * radius * height) + (2 * pi * (radius * radius)) ;
		baseArea = pi * (radius * radius);
		volume = pi * (radius * radius) * height ;
		
		System.out.printf("The Surface Area is : %.2f cm ", surfaceArea);
		System.out.printf("\nThe Base Area is : %.2f cm " , baseArea);
		System.out.printf("\nThe volume is : %.2f cm", volume);
		
		
		
	}

}
